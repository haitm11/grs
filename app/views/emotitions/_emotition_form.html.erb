<span class="emotitions">
  <span class="review-like <%= 'emotition-opacity' if current_user.liked? review %>">
    <%= link_to review_emotitions_path(review, emotition_type: :like),
      remote: true, method: :post, class: "emotition-like" do %>
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
      <span class="review-like-size"><%= review.likes.size %></span>
    <% end %>
  </span>

  <span class="review-dislike
    <%= 'emotition-opacity' if current_user.disliked? review %>">
    <%= link_to review_emotitions_path(review, emotition_type: :dislike),
      remote: true, method: :post, class: "emotition-dislike" do %>
      <i class="fa fa-thumbs-down" aria-hidden="true"></i>
      <span class="review-dislike-size"><%= review.dislikes.size %></span>
    <% end %>
  </span>
</span>
