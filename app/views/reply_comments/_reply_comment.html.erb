<div class="reply-comment">
  <% user = reply_comment.user %>
  <div class="reply-comment-left">
    <%= image_tag user.avatar_url, class: "img-responsive
      reply-comment-avatar" %>
  </div>

  <div class="reply-comment-right">
    <div class="reply-comment-header">
      <p class="nick-name"><%= link_to user.nick_name, user %></p>
      <small><%= l reply_comment.created_at, format: :default %></small>
    </div>

    <div class="reply-comment-body">
      <p><%= reply_comment.content %></p>
    </div>

    <div class="reply-comment-footer">
      <span class="reply">
        <i class="fa fa-reply" title="Reply this comment"
          aria-hidden="true"></i>
      </span>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
