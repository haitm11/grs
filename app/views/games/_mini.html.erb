<div class="game-mini">
  <div class="game-left">
    <div class="game-cover">
      <%= image_tag game.cover, class: "img-responsive" %>
    </div>
  </div>

  <div class="game-right">
    <div class="game-name">
      <span class="name"><%= index %>. <%= game.name %></span>
    </div>

    <div class="game-genre">
      <% game.genres.each do |genre| %>
        <%= genre.name if genre = game.genres.last %>
        <%= genre.name + ", " if genre != game.genres.last %>
      <% end %>
    </div>
  </div>

  <div class="clearfix"></div>
</div>
